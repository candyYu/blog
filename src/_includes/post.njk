---
layout: base.njk
---

<article class="mx-auto max-w-3xl">
  <header class="mb-8">
    <time class="text-sm text-zinc-500" datetime="{{ date | dateFmt }}">{{ date | dateFmt }}</time>
    <h1 class="font-heading text-3xl font-semibold tracking-tight text-white sm:text-4xl mt-2 mb-4">
      {{ title }}
    </h1>
    {% if description %}
    <p class="text-lg text-zinc-400">{{ description }}</p>
    {% endif %}
  </header>

  <div class="article-prose text-base leading-relaxed max-w-[65ch] md:text-lg">
    {{ content | safe }}
  </div>

  <footer class="mt-12 border-t border-zinc-800 pt-8">
    <a href="{{ baseUrl }}/" class="text-blue-400 font-medium hover:underline cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-[#18181b] rounded">← 返回首页</a>
  </footer>
</article>
